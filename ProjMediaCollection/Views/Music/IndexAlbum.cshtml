        @foreach (var album in Model.AlbumList)
        {
            <!-- Grid column -->
            <div class="col-lg-4 col-md-6">

                <!--Card-->
                <div class="card">

                    <!--Card image-->
                    <div class="view">
                        @if (album.Cover != null)
                        {

                            <a asp-controller="Music" asp-action="DetailAlbum" asp-route-id="@album.Id">
                                <img src="data:image;base64,@System.Convert.ToBase64String(album.Cover)" class="card-img-top" alt="photo">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        }
                        else
                        {
                            <p>Geen foto beschikbaar</p>
                        }
                    </div>

                    <!--Card content-->
                    <div class="card-body elegant-color white-text">
                        <!--Title-->
                        <h4 class="card-title">@album.Titel</h4>
                        <!--Text-->
                        <p class="card-text white-text">
                            @*@album.Release*@
                        </p>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-action="AddAlbumToPlaylist" asp-controller="User" asp-route-id="@album.Id" method="post">
                                @*<a asp-action="AddToPlaylist"  asp-controller="User" asp-route-id="@item.Id" >Add to playlist</a>*@

                                <div class=" form-group">
                                    <label asp-for="SelectedMyMusicPlaylist">Select your playlist</label>
                                    <select class="form-control" asp-for="SelectedMyMusicPlaylist" asp-items="Model.MyMusicPlaylistToSelect"></select>
                                    <span class="text-danger" asp-validation-for="MyMusicPlaylistToSelect"></span>
                                </div>
                                <button class="btn btn-primary" type="submit">Add to playlist</button>

                            </form>
                        }
                        @*<a href="#" class="btn btn-outline-white btn-md waves-effect">Button</a>*@
                    </div>

                </div>
                <!--/.Card-->

            </div>

        }





    </div>