@model ProjMediaCollection.Models.MusicViewModels.AddSongViewModel

    <form asp-action="AddSong" asp-controller="Music" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="SongGenreTags">Genre</label>
            <p>
                @for (var i = 0; i < Model.SongGenreTags.Count; i++)
                {
                    <label>@Model.SongGenreTags[i].Name</label>
                    <input asp-for="@Model.SongGenreTags[i].Checked" type="checkbox" />
                    <input asp-for="@Model.SongGenreTags[i].Id" type="hidden" />
                    <input asp-for="@Model.SongGenreTags[i].Name" type="hidden" />
                }
            </p>
        </div>

        @*<div class="form-group">
            <label asp-for="Cover">Cover</label>
            <input asp-for="Cover" />
            <span asp-validation-for="Cover"></span>
        </div>*@

        <button class="btn btn-primary" type="submit">Create Album</button>
    </form>
