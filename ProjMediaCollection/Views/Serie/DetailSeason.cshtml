@model ProjMediaCollection.Models.SerieViewModels.DetailSeasonViewModel

<strong>Episodes</strong>
@if (Model.EpisodesToAddToSeason != null)
{

    @foreach (var episode in Model.EpisodesToAddToSeason)
    {
        if (episode != null)
        {
            <strong>Title</strong>
            <p>@episode.Title</p>

            <strong>Picture</strong>
            @if (episode.Picture != null)
            {
                <p><img src="data:image;base64,@System.Convert.ToBase64String(episode.Picture)" width="160" height="205" /></p>
            }


            <strong>Description</strong>
            <p>@episode.Description</p>
        }



        @*<a asp-action="DetailSerie" asp-controller="Serie" asp-route-id="@season.Id">Detail</a>*@
    }

}


