@model ProjMediaCollection.Models.UserViewModels.CreateMusicPlaylistViewModel

    <form asp-controller="User" asp-action="CreateMusicPlaylist" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="MusicPlaylistName">Playlist name</label>
            <input asp-for="MusicPlaylistName" class="form-control" />
            <span asp-validation-for="MusicPlaylistName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Playlist</button>
    </form>
